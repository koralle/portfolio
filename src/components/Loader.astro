---
import { css } from '../../styled-system/css';
---

<div
  id="loader"
  class={css({
    position: 'fixed',
    top: 0,
    left: 0,
    width: '100%',
    height: '100svb',
    display: 'grid',
    placeItems: 'center',
    backgroundColor: '#eeeeee',
    zIndex: 9999,
  })}
>
  <h1
    class={css({
      fontSize: '3rem',
      fontWeight: 700,
      color: '#1a1a1a',
      clipPath: 'polygon(0 0, 100% 0, 100% 100%, 0% 100%)',
    })}
  >
    <div
      id="loader-text-inner"
      class={css({
        display: 'flex',
        gap: '0.25em',
      })}
    >
      <span>
        Now
      </span>
      <span>
        Loading...
      </span>
    </div>
  </h1>
</div>
